        let countdownInterval;
        
        // Initialize app
        document.addEventListener('DOMContentLoaded', function() {
            initializeParticles();
        });
        
        // Theme toggle
        function toggleTheme() {
            document.body.classList.toggle('light-theme');
            localStorage.setItem('theme', document.body.classList.contains('light-theme') ? 'light' : 'dark');
        }
        
        // Load saved theme
        if (localStorage.getItem('theme') === 'light') {
            document.body.classList.add('light-theme');
        }
        
        // Initialize floating particles
        function initializeParticles() {
            const container = document.getElementById('particles');
            const particleCount = 15;
            
            for (let i = 0; i < particleCount; i++) {
                const particle = document.createElement('div');
                particle.className = 'particle';
                particle.style.left = Math.random() * 100 + '%';
                particle.style.width = Math.random() * 10 + 5 + 'px';
                particle.style.height = particle.style.width;
                particle.style.animationDelay = Math.random() * 20 + 's';
                particle.style.animationDuration = (Math.random() * 10 + 15) + 's';
                container.appendChild(particle);
            }
        }
        
        // Calculate age and display results
        function calculateAge() {
            const day = parseInt(document.getElementById('birthDay').value);
            const month = parseInt(document.getElementById('birthMonth').value);
            const year = parseInt(document.getElementById('birthYear').value);
            
            if (!day || !month || !year) {
                alert('Please enter your complete birth date.');
                return;
            }
            
            if (day < 1 || day > 31 || month < 1 || month > 12 || year < 1900 || year > 2025) {
                alert('Please enter a valid birth date.');
                return;
            }
            
            const birthDate = new Date(year, month - 1, day);
            const today = new Date();
            
            // Check if it's their birthday today
            if (today.getMonth() === birthDate.getMonth() && today.getDate() === birthDate.getDate()) {
                document.getElementById('birthdayCelebration').classList.remove('hidden');
                document.getElementById('birthdayCelebration').scrollIntoView({ behavior: 'smooth' });
            } else {
                document.getElementById('birthdayCelebration').classList.add('hidden');
            }
            
            // Calculate age
            calculateAgeStats(birthDate, today);
            
            // Calculate zodiac signs
            calculateZodiacSigns(birthDate);
            
            // Setup birthday countdown
            setupBirthdayCountdown(birthDate);
            
            // Generate milestones
            generateMilestones(birthDate, today);
            
            // Show results
            document.getElementById('resultsSection').classList.remove('hidden');
            document.getElementById('resultsSection').scrollIntoView({ behavior: 'smooth', block: 'start' });
        }
        
        // Calculate age statistics
        function calculateAgeStats(birthDate, today) {
            const ageMs = today - birthDate;
            
            // Calculate various age formats
            const years = Math.floor(ageMs / (365.25 * 24 * 60 * 60 * 1000));
            const months = Math.floor(ageMs / (30.44 * 24 * 60 * 60 * 1000));
            const days = Math.floor(ageMs / (24 * 60 * 60 * 1000));
            const hours = Math.floor(ageMs / (60 * 60 * 1000));
            
            // Update display
            document.getElementById('ageYears').textContent = years.toLocaleString();
            document.getElementById('ageMonths').textContent = months.toLocaleString();
            document.getElementById('ageDays').textContent = days.toLocaleString();
            document.getElementById('ageHours').textContent = hours.toLocaleString();
            
            // Exact age calculation
            let ageYears = today.getFullYear() - birthDate.getFullYear();
            let ageMonths = today.getMonth() - birthDate.getMonth();
            let ageDays = today.getDate() - birthDate.getDate();
            
            if (ageDays < 0) {
                ageMonths--;
                ageDays += new Date(today.getFullYear(), today.getMonth(), 0).getDate();
            }
            
            if (ageMonths < 0) {
                ageYears--;
                ageMonths += 12;
            }
            
            document.getElementById('exactAge').textContent = 
                `You are exactly ${ageYears} years, ${ageMonths} months, and ${ageDays} days old.`;
        }
        
        // Calculate zodiac signs
        function calculateZodiacSigns(birthDate) {
            const month = birthDate.getMonth() + 1;
            const day = birthDate.getDate();
            const year = birthDate.getFullYear();
            
            // Western zodiac
            const westernSign = getWesternZodiac(month, day);
            document.getElementById('westernZodiacSymbol').textContent = westernSign.symbol;
            document.getElementById('westernZodiacName').textContent = westernSign.name;
            document.getElementById('westernZodiacDates').textContent = westernSign.dates;
            document.getElementById('westernZodiacDescription').textContent = westernSign.description;
            
            const westernTraitsContainer = document.getElementById('westernTraits');
            westernTraitsContainer.innerHTML = '';
            westernSign.traits.forEach(trait => {
                const span = document.createElement('span');
                span.className = 'personality-trait';
                span.textContent = trait;
                westernTraitsContainer.appendChild(span);
            });
            
            // Chinese zodiac
            const chineseSign = getChineseZodiac(year);
            document.getElementById('chineseZodiacSymbol').textContent = chineseSign.symbol;
            document.getElementById('chineseZodiacName').textContent = chineseSign.name;
            document.getElementById('chineseZodiacYear').textContent = `Year of the ${chineseSign.name}`;
            document.getElementById('chineseZodiacDescription').textContent = chineseSign.description;
            
            const chineseTraitsContainer = document.getElementById('chineseTraits');
            chineseTraitsContainer.innerHTML = '';
            chineseSign.traits.forEach(trait => {
                const span = document.createElement('span');
                span.className = 'personality-trait';
                span.textContent = trait;
                chineseTraitsContainer.appendChild(span);
            });
        }
        
        // Get western zodiac sign
        function getWesternZodiac(month, day) {
            for (let sign of westernZodiac) {
                const [startMonth, startDay] = sign.startDate;
                const [endMonth, endDay] = sign.endDate;
                
                if ((month === startMonth && day >= startDay) || 
                    (month === endMonth && day <= endDay) ||
                    (startMonth > endMonth && (month > startMonth || month < endMonth))) {
                    return sign;
                }
            }
            return westernZodiac[0]; // Default to Aries
        }
        
        // Get Chinese zodiac sign
        function getChineseZodiac(year) {
            const animals = ['Rat', 'Ox', 'Tiger', 'Rabbit', 'Dragon', 'Snake', 'Horse', 'Goat', 'Monkey', 'Rooster', 'Dog', 'Pig'];
            const index = (year - 1900) % 12;
            const animalName = animals[index];
            return chineseZodiac.find(sign => sign.name === animalName);
        }
        
        // Setup birthday countdown
        function setupBirthdayCountdown(birthDate) {
            const today = new Date();
            let nextBirthday = new Date(today.getFullYear(), birthDate.getMonth(), birthDate.getDate());
            
            // If birthday already passed this year, set to next year
            if (nextBirthday < today) {
                nextBirthday.setFullYear(today.getFullYear() + 1);
            }
            
            document.getElementById('nextBirthday').textContent = 
                `Your next birthday is on ${nextBirthday.toLocaleDateString('en-US', { 
                    weekday: 'long', 
                    year: 'numeric', 
                    month: 'long', 
                    day: 'numeric' 
                })}`;
            
            // Clear existing interval
            if (countdownInterval) {
                clearInterval(countdownInterval);
            }
            
            // Start countdown
            countdownInterval = setInterval(() => {
                const now = new Date();
                const timeLeft = nextBirthday - now;
                
                if (timeLeft <= 0) {
                    clearInterval(countdownInterval);
                    document.getElementById('countdownDays').textContent = '0';
                    document.getElementById('countdownHours').textContent = '0';
                    document.getElementById('countdownMinutes').textContent = '0';
                    document.getElementById('countdownSeconds').textContent = '0';
                    return;
                }
                
                const days = Math.floor(timeLeft / (1000 * 60 * 60 * 24));
                const hours = Math.floor((timeLeft % (1000 * 60 * 60 * 24)) / (1000 * 60 * 60));
                const minutes = Math.floor((timeLeft % (1000 * 60 * 60)) / (1000 * 60));
                const seconds = Math.floor((timeLeft % (1000 * 60)) / 1000);
                
                document.getElementById('countdownDays').textContent = days;
                document.getElementById('countdownHours').textContent = hours;
                document.getElementById('countdownMinutes').textContent = minutes;
                document.getElementById('countdownSeconds').textContent = seconds;
            }, 1000);
        }
        
        // Generate life milestones
        function generateMilestones(birthDate, today) {
            const milestones = [
                { age: 1, name: "First Birthday", icon: "üéÇ" },
                { age: 5, name: "Started School", icon: "üéí" },
                { age: 10, name: "Double Digits", icon: "üî¢" },
                { age: 13, name: "Teenager", icon: "üßí" },
                { age: 16, name: "Sweet Sixteen", icon: "üöó" },
                { age: 18, name: "Legal Adult", icon: "üéì" },
                { age: 21, name: "Twenty-One", icon: "ü•Ç" },
                { age: 25, name: "Quarter Century", icon: "üéØ" },
                { age: 30, name: "The Big 3-0", icon: "üèÜ" },
                { age: 40, name: "Life Begins at 40", icon: "üåü" },
                { age: 50, name: "Golden Jubilee", icon: "üëë" },
                { age: 60, name: "Diamond Years", icon: "üíé" },
                { age: 70, name: "Platinum Age", icon: "ü•á" },
                { age: 80, name: "Octogenarian", icon: "üèÖ" },
                { age: 90, name: "Nonagenarian", icon: "üéñÔ∏è" },
                { age: 100, name: "Centenarian", icon: "üéä" }
            ];
            
            const currentAge = Math.floor((today - birthDate) / (365.25 * 24 * 60 * 60 * 1000));
            const milestonesContainer = document.getElementById('milestonesList');
            milestonesContainer.innerHTML = '';
            
            milestones.forEach(milestone => {
                const div = document.createElement('div');
                div.className = `milestone-item ${currentAge >= milestone.age ? 'milestone-achieved' : 'milestone-upcoming'}`;
                
                const status = currentAge >= milestone.age ? 
                    `<i class="fas fa-check text-green-400 mr-3"></i>Achieved` : 
                    `<i class="fas fa-clock text-blue-400 mr-3"></i>Upcoming`;
                
                const yearsToGo = currentAge >= milestone.age ? '' : 
                    ` (in ${milestone.age - currentAge} years)`;
                
                div.innerHTML = `
                    <div class="text-3xl mr-4">${milestone.icon}</div>
                    <div class="flex-1">
                        <div class="font-semibold">${milestone.name}</div>
                        <div class="text-sm opacity-70">Age ${milestone.age}${yearsToGo}</div>
                    </div>
                    <div class="text-sm">${status}</div>
                `;
                
                milestonesContainer.appendChild(div);
            });
        }
    </script>
